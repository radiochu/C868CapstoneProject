<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.EditCourse">

    <TextView
            android:text="@string/class_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseNameLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_class_name"
            android:id="@+id/editCourseName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/courseNameLabel"
            android:minHeight="48dp"
            android:inputType="text"
            android:importantForAutofill="no" />

    <TextView
            android:text="@string/classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classroomLabel"
            app:layout_constraintTop_toBottomOf="@id/editCourseName"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_classroom"
            android:textSize="20sp"
            android:id="@+id/editClassroom"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/classroomLabel"
            android:minHeight="48dp"
            android:inputType="text"
            android:importantForAutofill="no" />

    <TextView
            android:text="@string/teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacherNameLabel"
            app:layout_constraintTop_toBottomOf="@id/editClassroom"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_teacher_name"
            android:id="@+id/editTeacherName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/teacherNameLabel"
            android:minHeight="48dp"
            android:inputType="textPersonName"
            android:importantForAutofill="no" />

    <TextView
            android:text="@string/teacher_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacherPhoneLabel"
            app:layout_constraintTop_toBottomOf="@id/editTeacherName"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_teacher_phone"
            android:id="@+id/editTeacherPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/teacherPhoneLabel"
            android:minHeight="48dp"
            android:inputType="phone"
            android:importantForAutofill="no" />

    <TextView
            android:text="@string/teacher_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacherEmailLabel"
            app:layout_constraintTop_toBottomOf="@id/editTeacherPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/enter_teacher_email"
            android:id="@+id/editTeacherEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/teacherEmailLabel"
            android:minHeight="48dp"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:importantForAutofill="no" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/classNotesLabel"
            android:text="@string/course_notes"
            app:layout_constraintTop_toBottomOf="@+id/editTeacherEmail"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

    <EditText
            android:hint="@string/editCourseNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editCourseNotes"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/classNotesLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCourseNotes"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp">

        <Button
                android:text="@android:string/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_course_button"
                android:layout_margin="8dp"
                android:layout_weight="1" />

        <Button
                android:text="@string/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/save_course_button"
                android:layout_margin="8dp"
                android:layout_weight="1" />

    </LinearLayout>

    <TextView
            android:text="@string/course_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/courseIDOnEdit"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

    <TextView
            android:hint="@string/auto_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/courseIDTV"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/courseIDOnEdit"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>